.basketContainer
    border-radius 4px
    border 4px solid #f5f9fa
    padding 15px 
    height 100%
    display flex
    flex-direction column
    position relative
    .basketRow
        display flex
        padding 15px 
        border-bottom 1px dotted #d9d8d6
        span
            display flex
            align-items center
        .flex-2
            flex 4
        .flex-1
            flex 1    
        input 
            width 70px
            padding 10px
            margin 0 15px
            border 1px solid #d9d8d6
            border-radius 5px
        .close
            color #999
            flex 1    
        .price
            color #f17431
            flex 4
        .title
            flex 4
                

    .basketFooter
        position absolute
        bottom 0
        display flex
        padding 15px
        width 100%
        .total
            flex 1
        .btnGroup
            display flex
            align-items center
            button 
                margin 0 10px
                

    h3 
       text-align center
